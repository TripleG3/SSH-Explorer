<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SSHExplorer.ViewModels"
             x:Class="SSHExplorer.Views.OptionsPage"
             x:DataType="vm:OptionsViewModel"
             Title="Options"
             BackgroundColor="{StaticResource AppBackgroundBrush}">

    <ScrollView Padding="20">
        <StackLayout Spacing="20">

            <!-- Theme Selection -->
            <Frame BackgroundColor="{StaticResource AppSurfaceBrush}"
                   BorderColor="{StaticResource AppBorderBrush}"
                   CornerRadius="8"
                   Padding="16">
                <StackLayout Spacing="16">
                    <Label Text="Appearance"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource AppTextBrush}"/>

                    <Label Text="Theme"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{StaticResource AppTextBrush}"/>

                    <StackLayout Spacing="8">
                        <RadioButton Content="System (Auto)"
                                     IsChecked="{Binding IsSystemTheme}"
                                     GroupName="ThemeGroup"
                                     TextColor="{StaticResource AppTextBrush}"/>
                        <Label Text="Automatically switch between light and dark themes based on your system settings"
                               FontSize="12"
                               TextColor="{StaticResource AppTextSecondaryBrush}"
                               Margin="32,0,0,0"/>

                        <RadioButton Content="Light"
                                     IsChecked="{Binding IsLightTheme}"
                                     GroupName="ThemeGroup"
                                     TextColor="{StaticResource AppTextBrush}"/>
                        <Label Text="Use light theme with bright backgrounds and dark text"
                               FontSize="12"
                               TextColor="{StaticResource AppTextSecondaryBrush}"
                               Margin="32,0,0,0"/>

                        <RadioButton Content="Dark"
                                     IsChecked="{Binding IsDarkTheme}"
                                     GroupName="ThemeGroup"
                                     TextColor="{StaticResource AppTextBrush}"/>
                        <Label Text="Use dark theme with dark backgrounds and light text"
                               FontSize="12"
                               TextColor="{StaticResource AppTextSecondaryBrush}"
                               Margin="32,0,0,0"/>
                    </StackLayout>
                </StackLayout>
            </Frame>

            <!-- Terminal Settings -->
            <Frame BackgroundColor="{StaticResource AppSurfaceBrush}"
                   BorderColor="{StaticResource AppBorderBrush}"
                   CornerRadius="8"
                   Padding="16">
                <StackLayout Spacing="16">
                    <Label Text="Terminal"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource AppTextBrush}"/>

                    <StackLayout Orientation="Horizontal"
                            Spacing="10">
                        <Label Text="Default Height:"
                               VerticalOptions="Center"
                               TextColor="{StaticResource AppTextBrush}"/>
                        <Slider x:Name="TerminalHeightSlider"
                                Minimum="120"
                                Maximum="600"
                                Value="{Binding TerminalHeight}"
                                WidthRequest="200"/>
                        <Label Text="{Binding Source={x:Reference TerminalHeightSlider}, Path=Value, StringFormat='{0:F0}px'}"
                               VerticalOptions="Center"
                               TextColor="{StaticResource AppTextSecondaryBrush}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal"
                            Spacing="10">
                        <CheckBox IsChecked="{Binding StartTerminalPinned}"/>
                        <Label Text="Start with terminal pinned open"
                               VerticalOptions="Center"
                               TextColor="{StaticResource AppTextBrush}"/>
                    </StackLayout>
                </StackLayout>
            </Frame>

            <!-- Connection Settings -->
            <Frame BackgroundColor="{StaticResource AppSurfaceBrush}"
                   BorderColor="{StaticResource AppBorderBrush}"
                   CornerRadius="8"
                   Padding="16">
                <StackLayout Spacing="16">
                    <Label Text="Connection"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource AppTextBrush}"/>

                    <StackLayout Orientation="Horizontal"
                            Spacing="10">
                        <CheckBox IsChecked="{Binding AutoConnectLastProfile}"/>
                        <Label Text="Auto-connect to last used profile on startup"
                               VerticalOptions="Center"
                               TextColor="{StaticResource AppTextBrush}"/>
                    </StackLayout>
                </StackLayout>
            </Frame>

            <!-- Save Button -->
            <Button Text="Save Settings"
                    Command="{Binding SaveCommand}"
                    BackgroundColor="{StaticResource AppPrimaryBrush}"
                    TextColor="White"
                    Padding="16,12"
                    CornerRadius="6"
                    FontAttributes="Bold"/>
        </StackLayout>
    </ScrollView>
</ContentPage>